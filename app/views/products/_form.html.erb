<%= form_with model: product do |form| %>
    <div data-controller="hello">
        <div data-hello-target="tooltip" class="tooltip-box hidden">
            The name field requires a unique, non-empty value.
        </div>
        <%= form.label :name, data: {action: "mouseenter->hello#show_tooltip mouseleave->hello#hide_tooltip"} %>
        <% if form.object.errors.any? %>
            <p class="error">
                <%= form.object.errors.full_messages.first %>
            </p>
        <% end %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description, style: "display: block;" %>
        <%= form.rich_textarea :description %>
    </div>

    <div>
        <%= form.label :featured_image %>
        <%= form.file_field :featured_image, accept: "image/*" %>
        <%= image_tag form.object.featured_image if form.object && form.object.featured_image.attached? %>
    </div>

    <div>
        <%= form.label :inventory_count, style: "display: block;" %>
        <%= form.number_field :inventory_count %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
